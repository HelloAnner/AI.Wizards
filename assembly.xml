<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>${timestamp}</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>.</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <includes>
                <include>plugin.xml</include>
            </includes>
            <outputDirectory>.</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>libs</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>.</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>